

;敵ステータス簡易表示
@SHOW_ENEMY_SIMPLE

FOR LOCAL:0, 1, 11
	IF TFLAG:(LOCAL:0 + 1000) > 0 && CFLAG:(LOCAL:0):気絶状態 == 0
		;EASYならHP・VL表示
		PRINTFORM ({LOCAL:0, 2}) Lv{BASE:(LOCAL:0):戦闘レベル,2} %CALLNAME:(LOCAL:0),21,LEFT% 
		CALL PRINT_HPMPEP(LOCAL:0, 0)
		;CALL PRINT_HPMPEP(LOCAL:0, 2)
		PRINT  
							;王者の威圧チェック
							CALL GET_MAX_ABL_PT(237)
							IF RESULT == 0
		CALL GET_MAX_ABL_PT(219)
		IF RESULT
			IF CFLAG:(LOCAL:0):現在状態 == 0
				PRINTFORM 待機残り　：{CFLAG:(LOCAL:0):残り待機時間, 4}
			ELSEIF CFLAG:(LOCAL:0):現在状態 < 0
				PRINTFORM 行動不能
			ELSE
				PRINTFORM 次行動まで：{CFLAG:(LOCAL:0):残り待機時間, 4}
			ENDIF
		ENDIF
							ENDIF
		PRINTL 
		IF FLAG:1073
			;PRINTFORML      HP:{BASE:(LOCAL:0):0,6} EP:{BASE:(LOCAL:0):2,6} 物攻:{CFLAG:(LOCAL:0):310,4} 物防:{CFLAG:(LOCAL:0):311,4} 魔攻:{CFLAG:(LOCAL:0):312,4} 魔防:{CFLAG:(LOCAL:0):313,4} 性攻:{CFLAG:(LOCAL:0):314,4} 性防:{CFLAG:(LOCAL:0):316,4}
		ENDIF
	ENDIF
NEXT

;戦闘中味方状況表示
@SHOW_PT_SIMPLE_BATTLE
FOR LOCAL:0, 1080, 1085
	IF FLAG:(LOCAL:0) > 0
	;付け加え
		IF CFLAG:(FLAG:(LOCAL:0)):気絶状態
			SETCOLOR 0xEE1010
		ENDIF
		PRINTFORM %CALLNAME:(FLAG:(LOCAL:0)),11,LEFT% 
		RESETCOLOR
		PRINTFORM Lv{BASE:(FLAG:(LOCAL:0)):戦闘レベル,2} 
		
		CALL PRINT_HPMPEP(FLAG:(LOCAL:0), 0)
		CALL PRINT_HPMPEP(FLAG:(LOCAL:0), 1)
		CALL PRINT_HPMPEP(FLAG:(LOCAL:0), 2)
		
		PRINT  
		IF CFLAG:(FLAG:(LOCAL:0)):現在状態 == 0
			PRINTFORM 待機残り　：{CFLAG:(FLAG:(LOCAL:0)):残り待機時間, 4} [
			IF CFLAG:(FLAG:(LOCAL:0)):残り待機時間 > 99
				SETCOLOR 0xEE6060
			ENDIF
			FOR LOCAL:1, 0, 33
				IF CFLAG:(FLAG:(LOCAL:0)):残り待機時間 > (3 * LOCAL:1)
					PRINT -
				ENDIF
			NEXT
			RESETCOLOR
			PRINT ] 
		ELSEIF CFLAG:(FLAG:(LOCAL:0)):現在状態 < 0
			PRINTFORM 行動不能          
		ELSE
			
		ENDIF
		CALL SHOW_BAD_STATUS(FLAG:(LOCAL:0))
		PRINTL
	ENDIF
NEXT

