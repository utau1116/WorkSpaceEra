CUSTOMDRAWLINE =
PRINTL ＵＮＩＴ-ＭＥＭＢＥＲ
ALIGNMENT CENTER
;GETFONT
;CHKFONT "MS UI Gothic"
;SIF RESULT
;	SETFONT "MS UI Gothic"
;LOCALS = RESULTS
	;SIF FLAG:(1080 + COUNT) < 0
	;	CONTINUE
	;1行目
	;一行の長さを15にして、レベルを
	;SET_COLOR_FUNC(FLAG:(1080 + COUNT))
	;COLOR("light-gray")
	;PRINTL 
	REPEAT 5
		;PRINT 　　
		CALL HEARTMARK_B
		SIF FLAG:(1080 + COUNT) > 0
			SETCOLOR SET_COLOR_FUNC(FLAG:(1080 + COUNT))
		SIF FLAG:(1080 + COUNT) <= 0
			SETCOLOR COLOR("light-gray")
		PRINTBUTTON @"[0{COUNT+1}] \@(FLAG:(1080 + COUNT) > 0) ? %CALLNAME:(FLAG:(1080 + COUNT)),10,LEFT% # %"EMPTY",10,LEFT%\@", COUNT + 1
		;CALL HEARTMARK_B
		PRINT 　
		RESETCOLOR
	REND
	PRINTL 
	;2行目
	REPEAT 5
		CALL HEARTMARK_B
		;SETCOLOR \@ FLAG:(1080 + COUNT) > 0 ? SET_COLOR_FUNC(FLAG:(1080 + COUNT)) # COLOR("light-gray") \@
		CALL STARMARK_Y
		SIF FLAG:(1080 + COUNT) <= 0
			SETCOLOR COLOR("light-gray")
			
		PRINTFORM \@ FLAG:(1080 + COUNT) > 0 ? [{BASE:(FLAG:(1080 + COUNT)):HP, 5}/{MAXBASE:(FLAG:(1080 + COUNT)):HP, 5}] # [-----/-----] \@
		RESETCOLOR
		PRINT 　
	REND
	PRINTL
	;3行目
	REPEAT 5
		;PRINT 　　
		CALL HEARTMARK_B
		;SETCOLOR \@ FLAG:(1080 + COUNT) > 0 ? SET_COLOR_FUNC(FLAG:(1080 + COUNT)) # COLOR("light-gray") \@
		IF FLAG:(1080 + COUNT)>0
			CALL BAR_HP, FLAG:(1080 + COUNT)
		ELSE
			CALL BAR_HP, , 1
		ENDIF
		;CALL HEARTMARK_B
		PRINT 　
	REND
	PRINTL 
	;4行目
	REPEAT 5
		;PRINT 　　
		PRINTFORM 　
		CALL HEARTMARK_P
		SIF FLAG:(1080 + COUNT) <= 0
			SETCOLOR COLOR("light-gray")
		PRINTFORM \@ FLAG:(1080 + COUNT) > 0 ? [{BASE:(FLAG:(1080 + COUNT)):MP, 5}/{MAXBASE:(FLAG:(1080 + COUNT)):MP, 5}] # [-----/-----] \@
		RESETCOLOR
		PRINT 　
	REND
	PRINTL
	;5行目
	REPEAT 5
		;PRINT 　　
		CALL HEARTMARK_B
		IF FLAG:(1080 + COUNT)>0
			CALL BAR_MP, FLAG:(1080 + COUNT)
		ELSE
			CALL BAR_MP, , 1
		ENDIF
		;CALL HEARTMARK_B
		PRINT 　
	REND
	PRINTL
	REPEAT 5
		CALL HEARTMARK_B
		IF FLAG:(1080 + COUNT) > 0
			CALL PRINT_BAR_VL(FLAG:(1080 + COUNT), , ,1)
		ELSE
			CALL BAR_HP, , 1
		ENDIF
		PRINT 　
		RESETCOLOR
	REND
	PRINTL 
	ALIGNMENT LEFT
	PRINTL 
	CUSTOMDRAWLINE =
	
	;ARG	対象
	;ARG:1	対象がいない
@BAR_HP, ARG, ARG:1
	IF ARG:1 > 0
		CALL PRINT_COLORBARQ, 1, 100, 15, UNICODE(0x2585), UNICODE(0x2585), 0xe45c5e, 0x152030, -256*3
	ELSE
		CALL PRINT_COLORBARQ, BASE:ARG:HP, MAXBASE:ARG:HP, 15, UNICODE(0x2585), UNICODE(0x2585), 0xe45c5e, 0x152030, -256*3
	ENDIF
	
	;ARG	対象
	;ARG:1	対象がいない
@BAR_MP, ARG, ARG:1
	IF ARG:1 > 0
		CALL PRINT_COLORBARQ, 0, 100, 15, UNICODE(0x2585), UNICODE(0x2585), 0x367193, 0x152030, -256*3
	ELSE
		CALL PRINT_COLORBARQ, BASE:ARG:MP, MAXBASE:ARG:MP, 15, UNICODE(0x2585), UNICODE(0x2585), 0x367193, 0x152030, -256*3
	ENDIF
